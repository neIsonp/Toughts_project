<div class="tought-form-container">
    <a href="/toughts/dashboard">Back</a>
    <h1>Edit the tought</h1>
    <form action="/toughts/edit" method="post">
        <input type="hidden" name="id" value="{{tought.id}}">
        <div class="form-control">
            <label for="title">Tought:</label>
            <input type="text" name="title" placeholder="Edit the tought:" value="{{tought.title}}">
        </div>

        <input type="submit" value="Edit">
    </form>
</div>